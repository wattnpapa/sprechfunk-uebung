{
  "name": "sprechfunk-uebung",
  "version": "1.0.0",
  "description": "[![GitHub](https://img.shields.io/badge/GitHub-Repository-blue?logo=github)](https://github.com/wattnpapa/sprechfunk-uebung) [![Live Demo](https://img.shields.io/badge/Demo-Online-green)](https://sprechfunk-uebung.de//)",
  "homepage": "https://github.com/wattnpapa/sprechfunk-uebung#readme",
  "bugs": {
    "url": "https://github.com/wattnpapa/sprechfunk-uebung/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wattnpapa/sprechfunk-uebung.git"
  },
  "license": "MIT",
  "author": "Johannes Rudolph",
  "type": "module",
  "main": "app.js",
  "scripts": {
    "build": "rollup -c && mkdir -p dist && cp -r assets dist/ && cp src/index.html dist/index.html && cp howto.md dist/howto.md && cp src/styles/main.css dist/style.css && cp src/firebase-config.js dist/firebase-config.js && cp src/robots.txt dist/robots.txt && cp src/sitemap.xml dist/sitemap.xml",
    "watch": "chokidar \"src/**/*\" \"assets/**/*\" \"rollup.config.js\" -c \"npm run build\"",
    "serve": "serve dist -l tcp://127.0.0.1:3000",
    "start": "npm run build && npm run serve",
    "dev": "concurrently \"npm run watch\" \"npm run serve\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:coverage": "mkdir -p test-results && vitest run --coverage --reporter=default --reporter=junit --outputFile.junit=test-results/junit.xml",
    "test:e2e": "playwright test",
    "test:e2e:smoke": "playwright test -g \"@smoke\"",
    "test:e2e:generator": "playwright test -g \"@generator\"",
    "test:e2e:admin": "playwright test -g \"@admin\"",
    "test:e2e:teilnehmer": "playwright test -g \"@teilnehmer\"",
    "test:e2e:uebungsleitung": "playwright test -g \"@uebungsleitung\"",
    "test:e2e:routing": "playwright test -g \"@routing\"",
    "test:e2e:split": "npm run test:e2e:smoke && npm run test:e2e:generator && npm run test:e2e:admin && npm run test:e2e:teilnehmer && npm run test:e2e:uebungsleitung && npm run test:e2e:routing",
    "coverage:readme": "node scripts/update-coverage-link.mjs",
    "deps:audit": "npm audit --omit=dev --audit-level=high",
    "perf:budget": "node scripts/check-performance-budget.mjs"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@stylistic/eslint-plugin": "^2.11.0",
    "@types/bootstrap": "^5.2.10",
    "@types/chart.js": "^2.9.41",
    "@types/crypto-js": "^4.2.2",
    "@types/jquery": "^3.5.33",
    "@types/jspdf": "^1.3.3",
    "@types/node": "^25.2.3",
    "@types/select2": "^4.0.63",
    "@types/showdown": "^2.0.6",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^4.0.18",
    "autoprefixer": "^10.4.21",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.1.0",
    "crypto-js": "^4.2.0",
    "eslint": "^9.14.0",
    "jsdom": "^28.0.0",
    "postcss": "^8.5.6",
    "rollup": "^4.45.1",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-postcss": "^4.0.2",
    "serve": "^14.2.5",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.14.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.2.0",
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.7",
    "chart.js": "^4.5.0",
    "firebase": "^12.9.0",
    "jquery": "^4.0.0",
    "jspdf": "^4.1.0",
    "jspdf-autotable": "^5.0.7",
    "jszip": "^3.10.1",
    "pdfjs-dist": "^5.4.624",
    "select2": "^4.1.0-rc.0",
    "select2-bootstrap-5-theme": "^1.3.0",
    "showdown": "^2.1.0"
  },
  "overrides": {
    "braces": "3.0.3",
    "tar": "7.5.7"
  }
}
